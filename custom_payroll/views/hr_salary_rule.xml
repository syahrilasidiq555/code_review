<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_salary_rule_form_inherit" model="ir.ui.view">
        <field name="name">hr_salary_rule_form_inherit</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="om_hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='appears_on_payslip']" position="after">
                <field name="appears_on_correction"/>
                <field name="appears_on_premi"/>
            </xpath>
        </field>
    </record>
</odoo>